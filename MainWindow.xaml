<Window x:Class="Teleprompter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Teleprompter" Height="450" Width="800"
        AllowsTransparency="True" WindowStyle="None" Background="Transparent" Topmost="True" Opacity="0.7">
    <Grid>
        <TextBox Name="TeleprompterText" Margin="10" FontSize="24" FontWeight="Bold" Foreground="White" Background="Transparent" TextWrapping="Wrap" AcceptsReturn="True" />
    </Grid>
</Window>
